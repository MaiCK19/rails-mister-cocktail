<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://neodrinks.com/wp-content/uploads/2020/06/cocktails-verano-bloody-mary.jpg');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @cocktail.doses.each do |dose| %>
      <div class="card">
        <h1>Ingredient</h1>
        <p><%= dose.ingredient.name %></p>
        <%= link_to cocktail_doses_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
      <div class="card">
        <h1>Description</h1>
        <p><%= dose.description %></p>
        <%= link_to cocktail_doses_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
</div>
